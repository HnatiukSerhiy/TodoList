@model TodoList.Models.CategoryModel;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width" />
        <meta charset="utf-8" />
        <title>Edit List</title>
        <link href="~/css/categorylist.css" rel="stylesheet" />
    </head>
    <body>
        <section>
            <div class="form-container">
                <h1>Edit Category</h1>
                <div asp-validation-summary="All"></div>
                <form method="post" asp-action="UpdateCategory" asp-controller="Category">
                    <input type="text" asp-for="Id" value="@Model.Id" hidden/>
                    <div class="category-name">
                        <input asp-for="Name" type="text" value="@Model.Name" />
                    </div>
                    <button type="submit">Save Changes</button>
                </form>
            </div>
        </section>
    </body>
</html>